<template name='scroll-menu'>
<view class="flex-center" style="margin:0 20rpx; width:100%;">
  <scroll-view scroll-x style="width: 100%; background-color: #fff; border-radius:12rpx;height:260rpx; margin:12rpx; white-space:nowrap;">
    <view wx:for="{{items}}" wx:key='unique' style="height:260rpx;width:235rpx;display:inline-block;">
      <view class="flex-column flex-center">
        <navigator url="{{item.url}}" open-type="navigate" style="width:200rpx; height:200rpx; margin: 10rpx;">
        <image src="{{item.picture ? host+item.picture : '/images/food.jpg'}}" style="width:200rpx; height:200rpx;"/>
        </navigator>
        <text style="font-size:28rpx; color:#5b5b5b">{{item.name}}</text>
      </view>
    </view>
  </scroll-view>
</view>
</template>